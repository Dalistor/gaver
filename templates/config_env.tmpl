package env

import (
	"log"
	"os"

	"github.com/joho/godotenv"
)

// Load carrega as variáveis de ambiente do arquivo .env
func Load() {
	if err := godotenv.Load(); err != nil {
		log.Println("Arquivo .env não encontrado, usando variáveis de ambiente do sistema")
	}
}

// Get retorna o valor de uma variável de ambiente ou um valor padrão
func Get(key, defaultValue string) string {
	if value := os.Getenv(key); value != "" {
		return value
	}
	return defaultValue
}

// GetRequired retorna o valor de uma variável obrigatória
func GetRequired(key string) string {
	value := os.Getenv(key)
	if value == "" {
		log.Fatalf("Variável de ambiente obrigatória não definida: %s", key)
	}
	return value
}

