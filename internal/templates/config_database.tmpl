package database

import (
	"fmt"
	"os"
	"path/filepath"
	"time"

	"{{.ProjectName}}/config/env"

{{if eq .DatabaseDriver "sqlite"}}
	"github.com/glebarez/sqlite" // Driver SQLite puro Go, não requer CGO
{{else}}
	"gorm.io/driver/{{.DatabaseDriver}}"
{{end}}
	"gorm.io/gorm"
	"gorm.io/gorm/logger"
)

var DB *gorm.DB

type Config struct {
	Host            string
	Port            string
	User            string
	Password        string
	DBName          string
	SSLMode         string
	MaxIdleConns    int
	MaxOpenConns    int
	ConnMaxLifetime time.Duration
}

// GetConfig retorna a configuração do banco de dados
func GetConfig() Config {
	return Config{
		Host:            env.Get("DB_HOST", "localhost"),
		Port:            env.Get("DB_PORT", "{{.DatabasePort}}"),
		User:            env.Get("DB_USER", "{{.DatabaseUser}}"),
		Password:        env.Get("DB_PASSWORD", ""),
		DBName:          env.Get("DB_NAME", "{{.ProjectName}}"),
		SSLMode:         env.Get("DB_SSLMODE", "disable"),
		MaxIdleConns:    10,
		MaxOpenConns:    100,
		ConnMaxLifetime: time.Hour,
	}
}

// Connect estabelece conexão com o banco de dados
func Connect() (*gorm.DB, error) {
	config := GetConfig()

	dsn := buildDSN(config)

	{{if eq .DatabaseDriver "sqlite"}}
	// Para SQLite, garantir que o diretório existe
	// Nota: Para Android, o banco embutido é copiado pelo MainActivity dos assets
	// Para Electron, o banco embutido é copiado pelo electron-main.js
	// O código Go apenas usa o banco no diretório de dados configurado
	dbPath := dsn
	dbDir := filepath.Dir(dbPath)
	if dbDir != "." && dbDir != "" {
		if err := os.MkdirAll(dbDir, 0755); err != nil {
			return nil, fmt.Errorf("erro ao criar diretório do banco: %w", err)
		}
	}
	// O arquivo será criado automaticamente pelo SQLite se não existir
	{{end}}

	{{if eq .DatabaseDriver "sqlite"}}
	db, err := gorm.Open(sqlite.Dialector{DSN: dsn}, &gorm.Config{
		Logger: logger.Default.LogMode(logger.Info),
	})
	{{else}}
	db, err := gorm.Open({{.DatabaseDriver}}.Open(dsn), &gorm.Config{
		Logger: logger.Default.LogMode(logger.Info),
	})
	{{end}}

	if err != nil {
		return nil, fmt.Errorf("falha ao conectar ao banco: %w", err)
	}

	// Configurações de pool de conexões
	sqlDB, err := db.DB()
	if err != nil {
		return nil, fmt.Errorf("falha ao configurar pool: %w", err)
	}

	sqlDB.SetMaxIdleConns(config.MaxIdleConns)
	sqlDB.SetMaxOpenConns(config.MaxOpenConns)
	sqlDB.SetConnMaxLifetime(config.ConnMaxLifetime)

	DB = db

	return db, nil
}

// getDatabasePath retorna o caminho correto do banco baseado na plataforma
// Para Android/Desktop, usa APP_DATA_DIR se disponível (diretório de dados do app)
// Para Server/Web, usa diretório atual ou configurável via env
func getDatabasePath(dbname string) string {
	// Para Android/Desktop, usar diretório de dados do app se configurado
	if appDataDir := os.Getenv("APP_DATA_DIR"); appDataDir != "" {
		return filepath.Join(appDataDir, dbname+".db")
	}
	// Para Server/Web, usar diretório atual
	return dbname + ".db"
}

// buildDSN constrói a string de conexão
func buildDSN(config Config) string {
	{{if eq .DatabaseDriver "postgres"}}
	return fmt.Sprintf(
		"host=%s port=%s user=%s password=%s dbname=%s sslmode=%s",
		config.Host, config.Port, config.User, config.Password, config.DBName, config.SSLMode,
	)
	{{else if eq .DatabaseDriver "mysql"}}
	return fmt.Sprintf(
		"%s:%s@tcp(%s:%s)/%s?charset=utf8mb4&parseTime=True&loc=Local",
		config.User, config.Password, config.Host, config.Port, config.DBName,
	)
	{{else if eq .DatabaseDriver "sqlite"}}
	return getDatabasePath(config.DBName)
	{{end}}
}

// Close fecha a conexão com o banco
func Close() error {
	if DB != nil {
		sqlDB, err := DB.DB()
		if err != nil {
			return err
		}
		return sqlDB.Close()
	}
	return nil
}

// GetVersion retorna a versão atual do banco
func GetVersion() (string, error) {
	var version string
	{{if eq .DatabaseDriver "postgres"}}
	err := DB.Raw("SELECT version()").Scan(&version).Error
	{{else if eq .DatabaseDriver "mysql"}}
	err := DB.Raw("SELECT VERSION()").Scan(&version).Error
	{{else if eq .DatabaseDriver "sqlite"}}
	err := DB.Raw("SELECT sqlite_version()").Scan(&version).Error
	{{end}}
	return version, err
}

// Ping verifica se a conexão está ativa
func Ping() error {
	sqlDB, err := DB.DB()
	if err != nil {
		return err
	}
	return sqlDB.Ping()
}

