package database

import (
	"fmt"
	"time"

	"{{.ProjectName}}/config/env"

	"gorm.io/driver/{{.DatabaseDriver}}"
	"gorm.io/gorm"
	"gorm.io/gorm/logger"
)

var DB *gorm.DB

type Config struct {
	Host            string
	Port            string
	User            string
	Password        string
	DBName          string
	SSLMode         string
	MaxIdleConns    int
	MaxOpenConns    int
	ConnMaxLifetime time.Duration
}

// GetConfig retorna a configuração do banco de dados
func GetConfig() Config {
	return Config{
		Host:            env.Get("DB_HOST", "localhost"),
		Port:            env.Get("DB_PORT", "{{.DatabasePort}}"),
		User:            env.Get("DB_USER", "{{.DatabaseUser}}"),
		Password:        env.Get("DB_PASSWORD", ""),
		DBName:          env.Get("DB_NAME", "{{.ProjectName}}"),
		SSLMode:         env.Get("DB_SSLMODE", "disable"),
		MaxIdleConns:    10,
		MaxOpenConns:    100,
		ConnMaxLifetime: time.Hour,
	}
}

// Connect estabelece conexão com o banco de dados
func Connect() (*gorm.DB, error) {
	config := GetConfig()

	dsn := buildDSN(config)

	db, err := gorm.Open({{.DatabaseDriver}}.Open(dsn), &gorm.Config{
		Logger: logger.Default.LogMode(logger.Info),
	})

	if err != nil {
		return nil, fmt.Errorf("falha ao conectar ao banco: %w", err)
	}

	// Configurações de pool de conexões
	sqlDB, err := db.DB()
	if err != nil {
		return nil, fmt.Errorf("falha ao configurar pool: %w", err)
	}

	sqlDB.SetMaxIdleConns(config.MaxIdleConns)
	sqlDB.SetMaxOpenConns(config.MaxOpenConns)
	sqlDB.SetConnMaxLifetime(config.ConnMaxLifetime)

	DB = db

	return db, nil
}

// buildDSN constrói a string de conexão
func buildDSN(config Config) string {
	{{if eq .DatabaseDriver "postgres"}}
	return fmt.Sprintf(
		"host=%s port=%s user=%s password=%s dbname=%s sslmode=%s",
		config.Host, config.Port, config.User, config.Password, config.DBName, config.SSLMode,
	)
	{{else if eq .DatabaseDriver "mysql"}}
	return fmt.Sprintf(
		"%s:%s@tcp(%s:%s)/%s?charset=utf8mb4&parseTime=True&loc=Local",
		config.User, config.Password, config.Host, config.Port, config.DBName,
	)
	{{else if eq .DatabaseDriver "sqlite"}}
	return config.DBName + ".db"
	{{end}}
}

// Close fecha a conexão com o banco
func Close() error {
	if DB != nil {
		sqlDB, err := DB.DB()
		if err != nil {
			return err
		}
		return sqlDB.Close()
	}
	return nil
}

// GetVersion retorna a versão atual do banco
func GetVersion() (string, error) {
	var version string
	{{if eq .DatabaseDriver "postgres"}}
	err := DB.Raw("SELECT version()").Scan(&version).Error
	{{else if eq .DatabaseDriver "mysql"}}
	err := DB.Raw("SELECT VERSION()").Scan(&version).Error
	{{else if eq .DatabaseDriver "sqlite"}}
	err := DB.Raw("SELECT sqlite_version()").Scan(&version).Error
	{{end}}
	return version, err
}

// Ping verifica se a conexão está ativa
func Ping() error {
	sqlDB, err := DB.DB()
	if err != nil {
		return err
	}
	return sqlDB.Ping()
}

