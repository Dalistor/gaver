# Database Configuration
DB_DRIVER={{.DatabaseDriver}}
DB_HOST=localhost
DB_PORT={{.DatabasePort}}
DB_USER={{.DatabaseUser}}
DB_PASSWORD=
DB_NAME={{.ProjectName}}
DB_SSLMODE=disable

# APP_DATA_DIR será configurado automaticamente para projetos Android/Desktop
# Para Android: diretório de dados do app (getFilesDir()/data)
# Para Desktop: diretório de dados do Electron (app.getPath('userData')/data)
# Para Server/Web: não é necessário (usa diretório atual)

# Server Configuration
SERVER_PORT={{.ServerPort}}
SERVER_HOST=0.0.0.0

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:{{.ServerPort}}

# Environment
ENV=development

# Configurações para o Frontend (Quasar)
# Variáveis com prefixo VITE_ são expostas ao frontend automaticamente pelo Vite
VITE_API_URL=http://localhost:{{.ServerPort}}/api/v1
VITE_SERVER_PORT={{.ServerPort}}

